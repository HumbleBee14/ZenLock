<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Schedule Info (Always Visible) -->
        <LinearLayout
            android:id="@+id/scheduleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground">

            <!-- Schedule Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/scheduleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Morning Focus"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/scheduleTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="06:00"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status and Expand Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/scheduleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/expandIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_expand"
                    android:rotation="0"
                    android:contentDescription="Expand" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expanded Content (Hidden by default) -->
        <LinearLayout
            android:id="@+id/expandedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/surface_dark"
            android:visibility="gone">

            <!-- Schedule Details -->
            <TextView
                android:id="@+id/scheduleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 hr focus session"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp" />

            <!-- Repeat Info -->
                            <TextView
                    android:id="@+id/repeatInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Repeat: Mon, Tue, Wed, Thu, Fri"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginBottom="8dp" />

            <!-- Notification Info -->
                            <TextView
                    android:id="@+id/notificationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notify: 5 min before"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginBottom="8dp" />

            <!-- End Time Info -->
                            <TextView
                    android:id="@+id/endTimeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ends at: 09:00"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginBottom="16dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/toggleButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Disable"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 