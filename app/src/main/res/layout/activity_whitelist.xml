<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    android:fitsSystemWindows="true"
    tools:context=".WhitelistActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/whitelistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whitelist Apps"
        android:textSize="20sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/appTabs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/tab_container_gradient"
        app:layout_constraintTop_toBottomOf="@id/whitelistTitle"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/textSecondary"
        app:tabSelectedTextColor="@color/textPrimary"
        app:tabIndicatorColor="@color/primary"
        app:tabIndicatorHeight="3dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingTop="16dp"
        app:tabPaddingBottom="16dp"/>

    <!-- Selected Apps Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/selectedAppsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/appTabs"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:weightSum="4">

            <!-- App Slot 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appSlot1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/darkBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/appIcon1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_placeholder"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

            <!-- App Slot 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appSlot2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/darkBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/appIcon2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_placeholder"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

            <!-- App Slot 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appSlot3"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/darkBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/appIcon3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_placeholder"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

            <!-- App Slot 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appSlot4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/darkBackground"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/appIcon4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_placeholder"
                    android:padding="12dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- RecyclerView for App List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/whitelistRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/selectedAppsCard"
        app:layout_constraintBottom_toTopOf="@id/saveContainer"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- Loading Indicator (Initially Visible) -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/primaryTeal"/>

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading apps..."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <!-- Save Button Container -->
    <LinearLayout
        android:id="@+id/saveContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/darkBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
