<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".PermissionsOnboardingActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="ZenLock Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to ZenLock"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary" />

    </LinearLayout>

    <!-- Permissions List -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Accessibility Permission -->
            <androidx.cardview.widget.CardView
                android:id="@+id/accessibilityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_accessibility_new"
                        android:contentDescription="Accessibility"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessibility Service"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enforce screen locking during focus sessions"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/accessibilityButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Grant"
                        android:textSize="13sp"
                        android:minWidth="70dp"
                        android:background="@drawable/modern_button_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Display Over Other Apps Permission -->
            <androidx.cardview.widget.CardView
                android:id="@+id/overlayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_overlay_new"
                        android:contentDescription="Display over other apps"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Display over other apps"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show lock screen over other applications"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/overlayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Grant"
                        android:textSize="13sp"
                        android:minWidth="70dp"
                        android:background="@drawable/modern_button_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Exact Alarms Permission (API 31+) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alarmCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_alarm_new"
                        android:contentDescription="Exact alarms"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exact alarms"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start scheduled sessions at precise time"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/alarmButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Grant"
                        android:textSize="13sp"
                        android:minWidth="70dp"
                        android:background="@drawable/modern_button_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Usage Access Permission (Optional) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/usageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_usage_new"
                        android:contentDescription="Usage access"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usage Access (Optional)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track app usage for analytics and progress"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/usageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Grant"
                        android:textSize="13sp"
                        android:minWidth="70dp"
                        android:background="@drawable/modern_button_primary"
                        android:textColor="@color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to App"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/modern_button_primary"
            android:textColor="@color/white"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Essential permissions must be granted to continue"
            android:textSize="12sp"
            android:textColor="@color/textSecondary"
            android:gravity="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
