<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ZenLock" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Modern Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Modern Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/backgroundPrimary</item>
        <item name="android:windowBackground">@color/backgroundPrimary</item>

        <!-- Status Bar (Modern Dark) -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/backgroundPrimary</item>

        <!-- No Action Bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!-- Modern Button Styles -->
    <style name="ModernButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/modern_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ModernButton.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/modern_button_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Modern Text Styles -->
    <style name="ModernText.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ModernText.Subheading" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ModernText.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ModernText.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Legacy Styles -->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/textPrimary</item>
    </style>

    <!-- Switch Theme -->
    <style name="AppTheme.Switch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
    </style>

    <style name="Theme.ZenLock" parent="Base.Theme.ZenLock" />

    <!-- NumberPicker Style for Schedule Dialog -->
    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:colorControlNormal">@color/primary</item>
    </style>

    <!-- Spinner Style for Schedule Dialog -->
    <style name="SpinnerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="android:popupBackground">@color/surface</item>
    </style>

    <!-- Modern Alert Dialog Style -->
    <style name="ModernAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/modern_dialog_background</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:colorBackground">@color/surface</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- Navigation Active Indicator Style -->
    <style name="NavigationActiveIndicator">
        <item name="android:width">40dp</item>
        <item name="android:height">32dp</item>
        <item name="android:color">@color/primary</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>
