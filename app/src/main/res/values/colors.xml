<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="transparent">#00000000</color>

    <!-- Vibrant Focus App Color Palette -->
    <!-- Primary Colors (Energizing Blue) -->
    <color name="primary">#2563EB</color>           <!-- Vibrant blue - Main brand color -->
    <color name="primaryDark">#1D4ED8</color>       <!-- Rich blue for depth -->
    <color name="primaryLight">#60A5FA</color>      <!-- Light blue for highlights -->
    
    <!-- Secondary Colors (Focus Orange) -->
    <color name="secondary">#F97316</color>         <!-- Energizing orange for accents -->
    <color name="secondaryDark">#EA580C</color>     <!-- Dark orange for contrast -->
    <color name="secondaryLight">#FB923C</color>    <!-- Light orange for subtle elements -->
    
    <!-- Accent Colors (Success & Focus) -->
    <color name="accent">#10B981</color>            <!-- Success green -->
    <color name="accentWarning">#F59E0B</color>     <!-- Warning amber -->
    <color name="accentDanger">#EF4444</color>      <!-- Error red -->
    
    <!-- Background Colors (Balanced Dark Theme) -->
    <color name="backgroundPrimary">#1F2937</color>     <!-- Softer dark background -->
    <color name="backgroundSecondary">#374151</color>   <!-- Card/surface background -->
    <color name="backgroundTertiary">#4B5563</color>    <!-- Elevated surfaces -->
    
    <!-- Text Colors (Professional Hierarchy) -->
    <color name="textPrimary">#F8FAFC</color>       <!-- Main text - near white -->
    <color name="textSecondary">#CBD5E1</color>     <!-- Secondary text - light gray -->
    <color name="textTertiary">#64748B</color>      <!-- Tertiary text - medium gray -->
    <color name="textHint">#475569</color>          <!-- Hint text - darker gray -->
    
    <!-- Surface Colors (Cards & Components) -->
    <color name="surface">#1E293B</color>           <!-- Card backgrounds -->
    <color name="surfaceElevated">#334155</color>   <!-- Elevated cards -->
    <color name="surfaceHighlight">#475569</color>  <!-- Highlighted surfaces -->
    
    <!-- Border & Divider Colors -->
    <color name="border">#374151</color>            <!-- Subtle borders -->
    <color name="borderLight">#4B5563</color>       <!-- Lighter borders -->
    <color name="divider">#374151</color>           <!-- Section dividers -->
    
    <!-- Status Colors -->
    <color name="success">#10B981</color>           <!-- Success states -->
    <color name="warning">#F59E0B</color>           <!-- Warning states -->
    <color name="error">#EF4444</color>             <!-- Error states -->
    <color name="info">#3B82F6</color>              <!-- Info states -->
    
    <!-- Legacy Compatibility (Gradually Remove) -->
    <color name="primaryTeal">@color/primary</color>
    <color name="darkTeal">@color/primaryDark</color>
    <color name="lightTeal">@color/primaryLight</color>
    <color name="luxuryBackground">@color/backgroundPrimary</color>
    <color name="darkBackground">@color/backgroundSecondary</color>
    <color name="lightGrey">@color/textSecondary</color>
    
    <!-- Navigation Colors -->
    <color name="navigationBarColor">@color/backgroundSecondary</color>
    <color name="bottomNavSelectedItem">@color/primary</color>
    <color name="bottomNavUnselectedItem">@color/textTertiary</color>
    
    <!-- Additional Colors for Schedule Feature -->
    <color name="gray">#808080</color>
    <color name="light_gray">#D3D3D3</color>
    <color name="dark_gray">#404040</color>
    <color name="green">#4CAF50</color>
    <color name="background_light">#F5F5F5</color>
    <color name="surface_dark">#0F172A</color>
</resources>
